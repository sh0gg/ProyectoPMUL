<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_candidato"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgCandidato"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_person"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Candidato"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layoutPartido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/imgLogoPartido"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_partido"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/txtPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Partido"
                android:textSize="14sp"
                android:textColor="#FF0000" />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/chkSeleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
