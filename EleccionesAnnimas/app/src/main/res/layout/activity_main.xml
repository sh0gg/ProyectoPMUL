<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="@dimen/padding_screen"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        style="@style/TextAppearance.Material3.TitleLarge"
        android:text="@string/lbl_create_poll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etTitle"
        android:hint="@string/hint_title"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:inputType="textCapSentences" />
    <EditText
        android:id="@+id/etVoters"
        android:hint="@string/hint_voters"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:inputType="number" />
    <TextView
        style="@style/TextAppearance.Material3.TitleMedium"
        android:text="@string/lbl_options"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_m"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOptionEdit"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:overScrollMode="never" />
    <Button
        android:id="@+id/btnAddOption"
        android:text="@string/btn_add_option"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_s" />
    <Button
        android:id="@+id/btnCreate"
        android:text="@string/btn_create_poll"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_m" />
    <Button
        android:id="@+id/btnStartLatest"
        android:text="@string/btn_start_latest"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_s" />
    <TextView
        style="@style/TextAppearance.Material3.TitleLarge"
        android:text="@string/lbl_saved_polls"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_l" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPolls"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
