<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvInfoNeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="@string/texto_neb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPosicionNeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="(0,0)"
        app:layout_constraintStart_toStartOf="@+id/tvInfoNeb"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoNeb" />

    <TextView
        android:id="@+id/tvLibroNeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/texto_sin_libro"
        app:layout_constraintStart_toStartOf="@+id/tvPosicionNeb"
        app:layout_constraintTop_toBottomOf="@+id/tvPosicionNeb" />

    <fragment
        android:id="@+id/frgControlesNeb"
        android:name="com.example.ejerciciocursores.FrgControles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLibroNeb" />

</androidx.constraintlayout.widget.ConstraintLayout>
